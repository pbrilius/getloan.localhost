<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Pbrilius\GetloanLocalhost\Entity\Loan" table="loan">
    <indexes>
      <index name="borrower" columns="borrower"/>
      <index name="lender" columns="lender"/>
    </indexes>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="sum" type="decimal" column="sum" precision="5" scale="2" nullable="false"/>
    <field name="date" type="datetime" column="date" nullable="false">
      <options>
        <option name="default">CURRENT_TIMESTAMP</option>
      </options>
    </field>
    <field name="payback" type="date" column="payBack" nullable="false"/>
    <field name="interestrates" type="decimal" column="interestRates" precision="3" scale="2" nullable="false"/>
    <one-to-one field="borrower" target-entity="Pbrilius\GetloanLocalhost\Entity\User" fetch="LAZY" inversed-by="credit">
      <join-columns>
        <join-column name="borrower" referenced-column-name="id"/>
      </join-columns>
    </one-to-one>
    <one-to-one field="lender" target-entity="Pbrilius\GetloanLocalhost\Entity\User" fetch="LAZY" inversed-by="debit">
      <join-columns>
        <join-column name="lender" referenced-column-name="id"/>
      </join-columns>
    </one-to-one>
  </entity>
</doctrine-mapping>
